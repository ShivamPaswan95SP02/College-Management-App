<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Uma Nath Singh Institute of Engineering and Technology VBSPU ,Jaunpur "
        android:textAllCaps="false"
        android:textColor="#FCFDFD"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064"
        tools:layout_editor_absoluteX="34dp" />

    <ImageView
        android:layout_width="114dp"
        android:layout_height="103dp"

        android:background="@drawable/dept_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <Button
        android:id="@+id/button1"
        android:layout_width="223dp"
        android:layout_height="65dp"
        android:backgroundTint="#DF14CB"
        android:text="Go To User Page"
        android:textAllCaps="false"
        android:textColor="#F0F3F4"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581"
        tools:ignore="InvalidId" />

    <Button
        android:id="@+id/button2"
        android:layout_width="209dp"
        android:layout_height="57dp"
        android:text="Go To Admin Page"
        android:textAllCaps="false"
        android:backgroundTint="@color/blue"
        android:textSize="17dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926"
        tools:ignore="InvalidId" />


</androidx.constraintlayout.widget.ConstraintLayout>